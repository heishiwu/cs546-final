<div class="container col-9 mt-3 ">
    <h3 class="mb-3">Sign Up</h3>
    <form id="signupForm" class="needs-validation" novalidate method="POST" action="/users/signup">
        {{#if message}}
        <div class="error font-italic" id="errors">{{message}}</div>
        {{/if}}
        <div class="row g-3">
            <div class="col-12">
                <label for="username" class="form-label">Username</label>
                <div class="input-group has-validation">
                    <input type="text" class="form-control" name="username" id="username" required>
                    <div class="invalid-feedback">
                        Your username is required.
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <label for="password" class="form-label">Password</label>
                <div class="input-group has-validation">
                    <input type="password" class="form-control" name="password" id="password" required>
                    <div class="invalid-feedback">
                        Your password is required.
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <label for="repeatPassword" class="form-label">Repeat Password</label>
                <div class="input-group has-validation">
                    <input type="password" class="form-control" name="repeatPassword" id="repeatPassword" required>
                    <div class="invalid-feedback">
                        Your repeat password is required.
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <label for="firstName" class="form-label">First name</label>
                <input type="text" class="form-control" name="firstName" id="firstName" required>
                <div class="invalid-feedback">
                    Valid first name is required.
                </div>
            </div>

            <div class="col-sm-6">
                <label for="lastName" class="form-label">Last name</label>
                <input type="text" class="form-control" name="lastName" id="lastName" required>
                <div class="invalid-feedback">
                    Valid last name is required.
                </div>
            </div>

            <div class="col-12">
                <label for="email" class="form-label">Email <span class="text-muted"></span></label>
                <input type="email" class="form-control" name="email" id="email" placeholder="you@example.com" required>
                <div class="invalid-feedback">
                    Please enter a valid email address.
                </div>
            </div>

            <div class="col-12">
                <label for="birthday" class="form-label">Birthday</label>
                <input type="date" class="form-control" name="birthday" id="birthday">
                <div class="invalid-feedback">
                    Please enter a valid birthday.
                </div>
            </div>

            <div class="col-md-6">
                <label for="insuranceType" class="form-label">Insurance Type</label>
                <select class="form-select" id="insuranceType" name="insuranceType">
                    <option value="">Choose...</option>
                    <option value="No Health Insurance">No Health Insurance</option>
                    <option value="Private Insurance">Private Insurance</option>
                    <option value="Medicare">Medicare</option>
                    <option value="Medicaid">Medicaid</option>
                    <option value="CHIP">CHIP</option>
                </select>
                <div class="invalid-feedback">
                    Please enter a Insurance Type.
                </div>
            </div>

            <div class="col-md-6">
                <label for="insuranceName" class="form-label">Insurance Name</label>
                <input type="text" class="form-control" name="insuranceName" id="insuranceName" placeholder="">
                <div class="invalid-feedback">
                    Please enter an Insurance Name.
                </div>
            </div>

            <hr class="my-4">

            <h5 class="mb-2 text-muted">Optional</h5>

            <div class="col-12">
                <label for="addressLine" class="form-label">Address Line</label>
                <input type="text" class="form-control" name="addressLine" id="addressLine" placeholder="1234 Main St">
                <div class="invalid-feedback">
                    Please enter a valid Address Line.
                </div>
            </div>

            <div class="col-12">
                <label for="apartment_suite_unitNumber" class="form-label">Apartment Suite UnitNumber</label>
                <input type="text" class="form-control" name="apartment_suite_unitNumber"
                    id="apartment_suite_unitNumber" placeholder="Apartment or suite">
                <div class="invalid-feedback">
                    Please enter an Insurance Name.
                </div>
            </div>

            <div class="col-md-3">
                <label for="city" class="form-label">City</label>
                <input type="text" class="form-control" name="city" id="city" placeholder="">
                <div class="invalid-feedback">
                    Please enter a valid City.
                </div>
            </div>

            <div class="col-md-3">
                <label for="county" class="form-label">County</label>
                <input type="text" class="form-control" name="county" id="county" placeholder="">
                <div class="invalid-feedback">
                    Please enter a valid County.
                </div>
            </div>

            <div class="col-md-3">
                <label for="state" class="form-label">State</label>
                <input type="text" class="form-control" name="state" id="state" placeholder="">
                <div class="invalid-feedback">
                    Please enter a valid State.
                </div>
            </div>

            <div class="col-md-3">
                <label for="postalCode" class="form-label">PostalCode</label>
                <input type="text" class="form-control" name="postalCode" id="postalCode" placeholder="">
                <div class="invalid-feedback">
                    Please enter a valid PostalCode.
                </div>
            </div>

            <div class="col-12">
                <label class="form-label">Gender</label>
                <div>
                    <input id="male" name="gender" type="radio" value="male">
                    <label class="genderRadio" for="male">Male</label>
                    <input id="female" name="gender" type="radio" value="female">
                    <label class="genderRadio" for="female">Female</label>
                    <input id="transgender" name="gender" type="radio" value="transgender">
                    <label class="genderRadio" for="transgender">Transgender</label>
                    <input id="other" name="gender" type="radio" value="other">
                    <label class="genderRadio" for="other">Other</label>
                    <input id="prefer_not_to_say" name="gender" type="radio" value="">
                    <label class="genderRadio" for="prefer_not_to_say">Prefer not to say</label>
                </div>
            </div>

            <div class="col-md-6">
                <label for="race" class="form-label">Race</label>
                <select class="form-select" name="race" id="race">
                    <option value="">Prefer not to say</option>
                    <option value="African American or Black">African American or Black</option>
                    <option value="White">White</option>
                    <option value="Asian">Asian</option>
                    <option value="American Indian or Alaska Native">American Indian or Alaska Native</option>
                    <option value="Native Hawaiian or Other Pacific Islander">Native Hawaiian or Other Pacific Islander
                    </option>
                    <option value="Other">Other</option>
                </select>
                <div class="invalid-feedback">
                    Please enter a valid Race.
                </div>
            </div>

            <div class="col-md-6">
                <label for="ethnicity" class="form-label">Ethnicity</label>
                <select class="form-select" name="ethnicity" id="ethnicity">
                    <option value="">Prefer not to say</option>
                    <option value="Hispanic or Latino">Hispanic or Latino</option>
                    <option value="Not Hispanic or Latino">Not Hispanic or Latino</option>
                </select>
                <div class="invalid-feedback">
                    Please enter a valid Ethnicity.
                </div>
            </div>

            <div class="col-md-6">
                <label for="medicalGroupNumber" class="form-label">Medical GroupNumber</label>
                <input type="text" class="form-control" name="medicalGroupNumber" id="medicalGroupNumber"
                    placeholder="">
                <div class="invalid-feedback">
                    Please enter a valid Medical GroupNumber.
                </div>
            </div>

            <div class="col-md-6">
                <label for="medicalid" class="form-label">Medical Id</label>
                <input type="text" class="form-control" name="medicalid" id="medicalid" placeholder="">
                <div class="invalid-feedback">
                    Please enter a valid Medical Id.
                </div>
            </div>

        </div>

        <hr class="my-4">

        <button class="w-100 btn btn-primary btn-lg" type="submit" id="signupSubmit">Sign Up</button>
    </form>
</div>