<h3 class="mb-3">Administration</h3>
<div class="row g-3">
    <h5 class="col-10">Site List</h5>
    <a href="admin/addNewSite" class="link-primary col-2">Add New Site</a>
    <form>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">AddressLine</th>
                    <th scope="col">City</th>
                    <th scope="col">County</th>
                    <th scope="col">State</th>
                    <th scope="col">PostalCode</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Operation</th>
                </tr>
            </thead>
            <tbody id="siteBody">
                {{#each sites}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.address.addressLine}}</td>
                    <td>{{this.address.city}}</td>
                    <td>{{this.address.county}}</td>
                    <td>{{this.address.state}}</td>
                    <td>{{this.address.postalCode}}</td>
                    <td>{{this.rating}}</td>
                    <td>
                        <p hidden>{{this._id}}</p>
                        <a class="updateSite" href="#">Update</a> <a class="deleteSite" href="#">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </form>

    <hr class="my-4">

