    <h5 class="col-10">Daily Data</h5>
    <a href="admin/addDailyData" class="link-primary col-2">Add Daily Data</a>
    <table width="95%" class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Daily Cases</th>
                <th scope="col">Daily Death</th>
                <th scope="col">Daily Vaccination</th>
                <th scope="col">Daily Recover</th>
                <th scope="col">Sum of Cases</th>
                <th scope="col">Sum of Death</th>
                <th scope="col">Sum of Vaccination</th>
                <th scope="col">Sum of Recover</th>
                <th scope="col">Change Date</th>
            </tr>
        </thead>
        <tbody  id="dailydataBody">
            {{#each sites}}
            <tr>
                <td>{{this.dailyCases}}</td>
                <td>{{this.dailyDeath}}</td>
                <td>{{this.dailyVaccination}}</td>
                <td>{{this.dailyRecover}}</td>
                <td>{{this.sum_of_cases}}</td>
                <td>{{this.sum_of_death}}</td>
                <td>{{this.sum_of_vaccination}}</td>
                <td>{{this.sum_of_recover}}</td>
                <td>{{this.change_date}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>